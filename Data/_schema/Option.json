{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": [
        "object"
    ],
    "title": "Option",
    "description": "Option schema.",
    "default": {},
    "examples": [

    ],
    "required": [
    ],
    
    "properties": {
        "Commands": {"$ref": "./CommandsCollection.json"},
        "Inherit": {"type":"string"},
        "State":{
            "type":"object",
            "anyOf": [
                {"required": ["Values"]},
                {"required": ["Value"]}
            ],
            "properties": {
                "Value":{
                    "$ref": "./OptionState.json"
                },
                "Values":{
                    "type":"object",
                    "patternProperties": {
                        "^.*$": {
                            "type":"object",
                            "requiered": ["Value"],
                            "properties": {
                                "Value":{"$ref": "./OptionState.json"},
                                "Condition":{"type":"string"}
                            }
                            
                        }
                    }
                }
            }
        },
        "Text": { "$ref": "./CText.json" }
    }
}