
{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "title": "CommandDialog",
    "description": "CommandDialog schema.",
    "default": {},
    "examples": [
    ],
    "required": [
        "DialogID",
        "Type"
    ],
    "additionalProperties": false,
    
    "properties": {
        "DialogID": {"type": "string" },
        "Settings":{
            "type":"object",
            "properties": {
                "onComplete":{"$ref": "./CommandsCollection.json"},
                "Targets":{
                    "type":"object",
                    "patternProperties": {
                        "^.*$": {
                            "type":"string"
                        }
                    }    
                }
            }
        },
        "Type": {"type": "string", "pattern": "^Dialog$" }
    }
}