{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type":"object",
    "required": [
        "TemplateIDs"
    ],
    "additionalProperties": false,
    
    "properties": {
        "$schema" :{"type":"string"},
        "TemplateIDs": {"type":"array","items": {"type":"string"} },
        "DialogueColor": {"type":"string" },
        "GenderVisible": {"type":"string" },
        "NameNick": {"type":"string" },
        "NameFirst": {"type":"string" },
        "NameLast": {"type":"string" },
        "Realtionships":{"type":"object","items": {"type":"string"}},
        "Schedules": {
            "patternProperties": {
                "^.*$": {
                    "$ref": "./TimeFilters.json"
                }
            },
            "examples": [
                {
                    "LocationID.SublocationID":{"0":{"TimeStart":0,"TimeEnd":2359}}
                }
            ]
        },
        "TexturePath" : { "$ref": "./ConditionalString.json", "examples": [{
            "Value": "npc/mother/portrait.jpg"
        }] }
    }
    
}