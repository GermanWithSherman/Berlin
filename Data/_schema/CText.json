{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": [
        "object",
        "string"
    ],
    "title": "CText",
    "description": "Provides advanced control over text that should be displayed.",
    "default": {},
    "examples": [
        {
            "Value": "Subway Station"
        }
    ],
    "required": [
    ],
    "additionalProperties": false,
    
    "properties": {
        "JoinWith": {"type":"string"},
        "Value": {
            "type": "string",
            "description": "A single value of type string. Use Values instead if you need to use several values.",
            "default": "",
            "examples": [
                "Subway Station"
            ]
        },
        "Values":{
            "patternProperties": {
                "^.*$": {
                    "$ref": "./CText.json"
                }
            }  
        },
        "Condition":{"$ref": "./Condition.json"}
    }
}