
{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "title": "CommandConditional",
    "description": "Will only be executed if the condition is true.",
    "examples": [
        {
            "Type":"Conditional",
            "Condition": "PC.Body.GenderVisible=\"f\"",
            "Commands":{}
        }
    ],
    "required": [
        "Commands",
        "Type"
    ],
    "additionalProperties": false,
    
    "properties": {
        "Commands": {"$ref": "./CommandsCollection.json"},
        "Condition": {"type":"string"},
        "Else": {"$ref": "./CommandsCollection.json"},
